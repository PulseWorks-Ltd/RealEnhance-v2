{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["node"],
      "phases": {
        "setup": { "nixPkgs": ["nodejs_22", "pnpm"] },
        "install": { "cmds": ["pnpm install --no-frozen-lockfile --force"] },
        "build":   { "cmds": ["pnpm run build"] }
      }
    }
  },
  "deploy": {
    "startCommand": "pnpm run preview -- --host 0.0.0.0 --port 8080",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
