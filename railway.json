{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["node"],
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs_22", "pnpm"],
          "cmds": []
        },
        "install": {
          "cmds": [
            "pnpm install --no-frozen-lockfile"
          ]
        },
        "build": {
          "cmds": [
            // 1. build the client
            "pnpm --filter ./client... run build",

            // 2. make sure server/static exists
            "rm -rf server/static && mkdir -p server/static",

            // 3. try to copy Vite-style output (dist). don't fail if it's missing
            "cp -r client/dist/* server/static/ || true",

            // 4. try to copy CRA/Next export-style output (build). don't fail if it's missing
            "cp -r client/build/* server/static/ || true",

            // 5. build the server
            "pnpm --filter @realenhance/server run build"
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "pnpm --filter @realenhance/server run start",
    "healthcheckPath": "/health",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
