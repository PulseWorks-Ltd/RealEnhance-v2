{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",

    // ðŸ‘‡ These two lines are the critical overrides
    "installCommand": "pnpm install --no-frozen-lockfile --force",
    "buildCommand": "pnpm install --no-frozen-lockfile --force && pnpm run build",

    "nixpacksPlan": {
      "providers": ["node"],
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs_22", "pnpm"],
          "cmds": []
        },
        "install": {
          "cmds": [
            "pnpm install --no-frozen-lockfile --force"
          ]
        },
        "build": {
          "cmds": [
            "pnpm run build"
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "pnpm run preview -- --host 0.0.0.0 --port 8080",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/"
  },
  "envVars": {
    "PORT": "8080",
    "NODE_ENV": "production",
    "VITE_API_BASE_URL": "https://server-production-96f7.up.railway.app"
  }
}

