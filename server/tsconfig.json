{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "outDir": "dist",
    "rootDir": "src",
    "resolveJsonModule": true,
    "types": ["node", "express", "multer", "express-session"]
  },
  "include": ["src"]
}
