{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": false,
    "types": ["node"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "src/global-shared.d.ts"
  ],
  "exclude": [
    "src/services/batchProcessor.ts",
    "src/services/compliance.ts",
    "src/services/email.ts",
    "src/services/zipper.ts"
  ]
}