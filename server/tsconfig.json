{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": ".",                           // ⬅️ cover src + shared
    "baseUrl": ".",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@realenhance/shared/*": ["shared/src/*"]  // optional alias if you import from shared
    }
  },
  "include": ["src/**/*", "shared/**/*"],
  "exclude": ["dist", "node_modules"]
}

