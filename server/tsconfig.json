{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "../shared/src/**/*.ts"
  ],
  "exclude": [
    "src/services/batchProcessor.ts",
    "src/services/compliance.ts",
    "src/services/email.ts",
    "src/services/zipper.ts"
  ]
}
